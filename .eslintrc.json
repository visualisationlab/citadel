{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended"
    ],
    "ignorePatterns": ["**/*.d.ts", "**/*.js"],
    "parserOptions": {
      "project": true,
      "tsconfigRootDir": "__dirname",
      "ecmaVersion": 2021
  },
    "env": {
      "node": true,
      "browser": true
    }
}
