{
    "name": "citadel",
    "private": true,
    "dependencies": {
        "concurrently": "^8.2.1",
        "immutable": "^4.1.0",
        "pixi.js": "^5.3.12",
        "react-sigma": "^1.2.35",
        "react-toggle": "^4.1.3",
        "typescript": "^5.2.2",
        "uninstall": "^0.0.0"
    },
    "workspaces": [
        "client",
        "server",
        "utility",
        "shared"
    ],
    "config": {
        "devaddress": "dev.citadel"
    },
    "scripts": {
        "start": "concurrently \"npm run start-server\" \"npm run start-client\" ",
        "start-server": "cd server && npm run start",
        "start-client": "cd client && npm run start",
        "lint": "eslint utility --ext .ts",
        "setup": "npm run config-server",
        "config-server": "python3 utility/config_server.py",
        "config-client": "python3 utility/config_client.py",
        "generate-certs": "npm install && cd utility && npx tsc && cd .. && node utility/devcert_generate.js",
        "clean": "rm -rf node_modules && rm -rf client/node_modules && rm -rf server/node_modules && rm -rf utility/node_modules && rm -rf shared/node_modules"
    },
    "devDependencies": {
        "@types/intl": "^1.2.0",
        "@types/node": "^20.4.8",
        "@typescript-eslint/eslint-plugin": "^6.2.0",
        "@typescript-eslint/parser": "^6.2.0",
        "devcert": "^1.2.2",
        "eslint": "^8.45.0"
    }
}
