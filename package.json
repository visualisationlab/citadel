{
    "name": "citadel",
    "private": true,
    "dependencies": {
        "immutable": "^4.1.0"
    },
    "workspaces": [
        "client",
        "server",
        "utility"
    ],
    "config": {
        "devaddress": "dev.citadel"
    },
    "scripts": {
        "lint": "eslint utility --ext .ts",
        "setup": "npm run config-server",
